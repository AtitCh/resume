{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Disable the 'React must be in scope' rule
    "react/jsx-no-target-blank": ["warn", { "allowReferrer": false }], // Warn for target="_blank" without rel="noopener noreferrer"
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  }
}
